<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="동선 수정"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_update_location"
        app:layout_constraintEnd_toStartOf="@+id/tv_update_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_update_location" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_update_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_update_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_update_date" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_update_starttime"
        app:layout_constraintEnd_toStartOf="@+id/tv_update_starttime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_update_starttime" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/et_update_memo"
        app:layout_constraintEnd_toStartOf="@+id/et_update_memo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_update_memo" />

    <TextView
        android:id="@+id/tv_update_location"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="서울시 광진구 구의동"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tv_update_date"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:gravity="center_vertical"
        android:onClick="textOnClick"
        android:paddingLeft="10dp"
        android:text="날짜를 입력하려면 클릭하세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_location" />

    <TextView
        android:id="@+id/tv_update_starttime"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:gravity="center"
        android:onClick="textOnClick"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="시작시간을\n입력하려면 클릭"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_date" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        android:text="~"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/tv_update_endtime"
        app:layout_constraintStart_toEndOf="@+id/tv_update_starttime"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_date" />

    <TextView
        android:id="@+id/tv_update_endtime"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:gravity="center"
        android:onClick="textOnClick"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="종료시간을\n입력하려면 클릭"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_date" />

    <EditText
        android:id="@+id/et_update_memo"
        android:layout_width="278dp"
        android:layout_height="131dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:ems="10"
        android:gravity="top"
        android:hint="메모를 입력하세요"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_starttime" />

    <Button
        android:id="@+id/btn_update_cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_notext"
        android:onClick="onClick"
        android:text="취소"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_update_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_update_memo" />

    <Button
        android:id="@+id/btn_update_update"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_notext"
        android:onClick="onClick"
        android:text="추가"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_update_cancel"
        app:layout_constraintTop_toBottomOf="@+id/et_update_memo" />

</androidx.constraintlayout.widget.ConstraintLayout>