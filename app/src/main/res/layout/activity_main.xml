<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color_beige__2_"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:layout_alignEnd="@+id/login_et_pw"
        android:layout_alignRight="@+id/login_et_pw"
        android:layout_alignBottom="@+id/login_et_pw"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_et_pw"
        app:layout_constraintEnd_toEndOf="@+id/login_et_pw"
        app:layout_constraintTop_toTopOf="@+id/login_et_pw"
        app:srcCompat="@drawable/group_2_1" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="17dp"
        android:layout_height="23dp"
        android:layout_alignEnd="@+id/login_et_id"
        android:layout_alignRight="@+id/login_et_id"
        android:layout_alignBottom="@+id/login_et_id"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_et_id"
        app:layout_constraintEnd_toEndOf="@+id/login_et_id"
        app:layout_constraintTop_toTopOf="@+id/login_et_id"
        app:srcCompat="@drawable/group__2_" />

    <EditText
        android:id="@+id/login_et_id"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:ems="10"
        android:hint="이메일을 입력하세요."
        android:inputType="textPersonName|text|textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20" />

    <EditText
        android:id="@+id/login_et_pw"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_below="@id/login_et_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_3_1__2_"
        android:ems="10"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_et_id" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_below="@+id/login_et_pw"
        android:layout_alignEnd="@+id/login_et_pw"
        android:layout_alignRight="@+id/login_et_pw"
        android:layout_marginTop="50dp"
        android:background="@drawable/group_2__2_"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_et_pw" />

    <TextView
        android:id="@+id/tv_pw_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="16dp"
        android:text="p/w 찾기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="116dp"
        android:layout_height="118dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boy__1_" />
</androidx.constraintlayout.widget.ConstraintLayout>